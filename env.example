# Outline Environment Variables
# Скопируйте этот файл в .env и заполните значения

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here

# App Secrets (сгенерируйте случайные строки)
SECRET_KEY=your_secret_key_here_min_32_chars
UTILS_SECRET=your_utils_secret_here_min_32_chars
SESSION_SECRET=your_session_secret_here_min_32_chars
COOKIE_SECRET=your_cookie_secret_here_min_32_chars

# App URL
OUTLINE_URL=https://your-domain.com

# Google OAuth (обязательно для аутентификации)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Admin Email
ADMIN_EMAIL=admin@your-domain.com

# Features
ENABLE_REGISTRATION=false
ENABLE_ANALYTICS=false

# Email Configuration (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@your-domain.com

# AWS S3 Storage (опционально, для файлов)
AWS_S3_BUCKET=your-outline-bucket
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
